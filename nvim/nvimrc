            command! -bang -nargs=* F
                \ call fzf#vim#grep(g:rg_command .shellescape(<q-args>), 1, <bang>0)
            nmap <leader>s :F<CR>
        endif
        command! -bang Buffers call fzf#run(fzf#wrap(
            \ {'source': map(range(1, bufnr('$')), 'bufname(v:val)')}, <bang>0))
