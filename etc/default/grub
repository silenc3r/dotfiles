GRUB_TIMEOUT="5"
GRUB_DISTRIBUTOR="$(sed 's, release .*$,,g' /etc/system-release)"
GRUB_DEFAULT="saved"
GRUB_DISABLE_SUBMENU="true"
GRUB_TERMINAL_OUTPUT="console"
# about discard see https://bbs.archlinux.org/viewtopic.php?id=143254
# or https://lists.fedoraproject.org/pipermail/test/2014-November/124122.html
GRUB_CMDLINE_LINUX="rhgb quiet rootflags=discard"
GRUB_DISABLE_RECOVERY="true"
