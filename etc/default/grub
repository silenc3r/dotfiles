#GRUB_GFXMODE="1920x1200x32;1920x1200x24;1600x1200x32;1600x1200x24;auto"
#GRUB_GFXPAYLOAD="keep"
#GRUB_BACKGROUND="/usr/share/backgrounds/f21/default/wide/f21.png"
export GRUB_COLOR_NORMAL="light-gray/black"
export GRUB_COLOR_HIGHLIGHT="blue/black"
